<h5 class="shadow bg-body p-1 text-center rounded">Паспорт безопасности ребенка</h3>

<div class="pt-3 d-flex text-center justify-content-center">
  <div class="p-2 w-50">
    <h6 class="shadow p-1 mb-3 bg-body rounded">Ваш ребенок</h3>
    <div class="card mb-5">
          <div class="card-body">
            <p class="text-secondary"><%= @user.full_name %>, <%= @user.age_to_s %></h5>
            <div class="d-flex align-content-center flex-wrap rounded-3 p-2"
              style="background-color: <%= protection_color(@user_programs) %>;">
              <div class="flex-fill">
                <p class="badge text-wrap">Защищенность</p>
                <p class="mb-0"><%= child_protection(@user_programs) %> %</p>
              </div>
              <div class="flex-fill">
                <p class="badge text-wrap">Уровень</p>
                <p class="mb-0"><%= protection_raiting(@user_programs) %></p>
              </div>
            </div>
            <div class="progress">
              <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar"
                aria-label="Animated striped example" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"
                style="width: <%= child_protection(@user_programs) %>%"></div>
            </div>
          </div>
        </div>
  </div>
  <div class="p-2 w-50">
    <div class="flex-shrink-0">
      <%= image_tag('passport.jpg', class: 'img-fluid') %>
    </div>
  <div> 

</div>
