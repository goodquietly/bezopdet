<section class="text-center text-lg-start">
  <style>
    .cascading-right {
      margin-right: -50px;
    }

    @media (max-width: 991.98px) {
      .cascading-right {
        margin-right: 0;
      }
    }
  </style>

  <div class="py-4">
    <div class="row g-0 align-items-center">
      <div class="col-lg-6 mb-5 mb-lg-0">
        <div class="card cascading-right" style="
            background: hsla(0, 0%, 100%, 0.55);
            backdrop-filter: blur(30px);
            ">
          <div class="card-body p-5 shadow-5 text-center">
            <h2 class="fw-bold mb-3"><%= t('.sign_up') %></h2>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), 
             data: { controller: "flatpickr",                                  turbo: false }) do |f| %>

            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-floating mb-3">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", 
                  placeholder: 'Введите email', id: "floatingInput", class: "form-control" %>
              <%= f.label :email, for: "floatingInput" %>              
            </div>

            <div class="form-check form-switch mb-3">
              <%= f.label :subscribed, for: "flexSwitchCheckChecked", class: "form-check-label" %> 
              <%= f.check_box :subscribed, checked: true, class: "form-check-input", id: "flexSwitchCheckChecked" %>              
            </div>

            <div class="form-floating mb-3">
              <%= f.password_field :password, autocomplete: "new-password", 
                   class: "form-control", id: "floatingPassword", placeholder: 'Пароль (6 знаков минимум)' %>                   
              <%= f.label :password, for: "floatingPassword" %>
            </div>

            <div class="form-floating mb-3">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", 
                   class: "form-control", id: "floatingPassword", placeholder: 'Пароль (6 знаков минимум)' %>
              <%= f.label :password_confirmation, for: "floatingPassword" %>
            </div>

            <div class='d-grid gap-2'>
              <%= f.submit t('.sign_up') , class: 'btn btn-secondary btn-block mb-4' %>
              <%= render "devise/shared/links" %>
            </div>
            <% end %>

          </div>
        </div>
      </div>

      <div class="col-lg-6 mb-5 mb-lg-0">
        <%= image_tag('sign_up.jpg', class: 'img-fluid w-100 rounded-4 shadow-4') %>
      </div>
    </div>
  </div>
</section>
