<main>
  <div class="m-1 mb-4 rounded-3">
    <div class="py-5 row text-center justify-content-center">
      <h3 class="shadow p-3 mb-5 bg-body rounded">Активность: <%= @child_program.training_program.title %></h3>
      <div class="col-lg-8 mb-5 text-bg-<%= background_color(@child_program) %> rounded-3"> 
        <% if @child_program.training_program.pdf.representable? %>             
          <%= link_to image_tag(@child_program.training_program.pdf.representation(resize_to_limit: [800, 600]), 
                              class: 'img-fluid'), @child_program.training_program.pdf.url, target: '_blank' %>
        <% end %>
      </div>
      <div class="col-lg-4 d-flex text-center align-content-center flex-wrap">
        <div class="w-100">

          <%= render @child_program %>

        </div>
      </div>
    </div>
  </div>
</main>
