<div class="card text-center">
  <div class="card-header">
    <div class="d-grid gap-2">

      <% if policy(user_program).complete? %>
      <%= link_to 'Выполнено!', complete_user_program_path(user_program), class: 'btn btn-warning m-2', 
                           data: { turbo_method: :put, turbo_confirm: "Вы уверены, что методика усвоена?"} %>
      <% else %>
        <p class='text-success mb-0'>Активность изучена: <%= l(user_program.completed_at, format: :long) %></p>
      <% end %>

    </div>
  </div>
  <div class="card-body">
    <div class="card-text"><b>Напоминание: </b>

      <% unless user_program.notice_time.nil? %>
        <p class='text-danger mb-0'><%= l(user_program.notice_time, format: :long) %></p>
      <% else %>
        Не установлено
      <% end %>

    </div>
  </div>
  <div class="card-footer">
    <div class="d-grid gap-2">
      <%= link_to "Установить напоминание", edit_user_program_path(@user_program), class: 'btn btn-info m-2' %>
    </div>
  </div>
</div>
